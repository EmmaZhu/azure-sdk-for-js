{
  "extends": "../../../tsconfig.package",
  "compilerOptions": {
    "declarationDir": "./types/latest",
    "outDir": "./dist-esm",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "paths": {
      "@azure/storage-blob": ["./src/index"]
    }
  },
  "compileOnSave": true,
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./samples-dev/**/*.ts",
    "../storage-internal-avro/**/*.ts",
    "../storage-common/**/*.ts"
  ]
}
